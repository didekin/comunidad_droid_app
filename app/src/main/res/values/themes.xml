<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="themeOne" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_900</item>
        <item name="colorAccent">@color/deep_orange_600</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:actionBarSize">45dp</item>
        <!-- Buttons -->
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <!-- Dialogs -->
        <item name="android:alertDialogTheme">@style/alertDialogTheme</item>
        <item name="alertDialogTheme">@style/alertDialogTheme</item>
        <!-- Style for menu item in the action bar (login, p.e) -->
        <item name="actionMenuTextAppearance">@style/appBarMenuItem</item>
        <item name="android:actionMenuTextAppearance">@style/appBarMenuItem</item>
        <!---->
        <item name="android:selectableItemBackground">@color/deep_orange_200</item>
        <item name="selectableItemBackground">@color/deep_orange_200</item>
        <!-- Spinners and menu overflow items -->
        <item name="dropDownListViewStyle">@style/dropDownMenu</item>
        <item name="android:dropDownListViewStyle">@style/dropDownMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/optionMenuTextLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/optionMenuTextLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/optionMenuTextSmall</item>
        <item name="textAppearanceSmallPopupMenu">@style/optionMenuTextSmall</item>
        <item name="listPreferredItemHeight">35dp</item>
        <item name="listPreferredItemHeightSmall">30dp</item>
        <item name="listPreferredItemHeightLarge">35dp</item>
        <item name="android:listPreferredItemHeight">35dp</item>
        <item name="android:listPreferredItemHeightSmall">30dp</item>
        <item name="android:listPreferredItemHeightLarge">35dp</item>
    </style>

</resources>

