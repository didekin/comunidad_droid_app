    <!--................. Buttons .............. -->
    <style name="textBase.acButton1">
        <item name="android:textSize">@dimen/text_decription_widget</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_double_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!-- .............. EditTextFields ......... -->
    <style name="textBase.editField">
        <item name="android:textSize">@dimen/text_hint_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="textBase.editField.email">
        <item name="android:maxEms">60</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email_hint</item>
    </style>

    <style name="textBase.editField.password">
        <item name="android:maxEms">50</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/usuario_password_hint</item>
    </style>

    <style name="textBase.editField.alias">
        <item name="android:maxEms">30</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/usuario_alias_hint</item>
    </style>

    <!-- ................... Layouts .......... -->
    <style name="baseLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="baseLayout.scroll">
        <item name="android:scrollbars">none</item>
    </style>

    <!-- ................ Spinners ............. -->
    <style name="spinnerBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spinner_horizontal_margin</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <!-- ............. Text fields ........... -->
    <style name="textBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/simple_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="textBase.textFieldLabel1">
        <item name="android:textSize">@dimen/text_decription_widget</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textBase.textFieldLabel2">
        <item name="android:textSize">@dimen/text_hint_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textBase.textPageLabel1">
        <item name="android:textSize">@dimen/text_rotulo_fragment</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBase.textPageLabel2">
        <item name="android:textSize">@dimen/text_rotulo_fragment</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>