<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ................... Lists ............. -->
    <style name="basicList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">?attr/colorPrimaryDark</item>
        <item name="android:dividerHeight">@dimen/divider_heigth</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:padding">@dimen/list_padding</item>
    </style>

    <style name="textBase.no_item_list_message">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/text_rotulo_list</item>
    </style>
</resources>