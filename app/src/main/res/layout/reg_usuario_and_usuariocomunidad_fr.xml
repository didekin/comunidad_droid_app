<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:orientation="vertical"
        >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/reg_usuariocomunidad_usuario_form_root"
                    android:visibility="visible"
                    tools:context="com.didekindroid.usuario.activity.RegUserAndUserComuFr">

        <TextView
                android:id="@+id/rotulo_comunidad"
                android:text="@string/rotulo_comunidad"
                android:textStyle="bold"
                android:textSize="@dimen/text_rotulo_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:id="@+id/descripcion_comunidad_text"
                android:textStyle="normal"
                android:textSize="@dimen/text_decription_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/rotulo_comunidad"
                android:layout_alignTop="@id/rotulo_comunidad"
                android:layout_alignBottom="@id/rotulo_comunidad"
                />

        <include
                layout="@layout/reg_usercomu_fr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/reg_usuariocomunidad_include"
                android:layout_below="@id/rotulo_comunidad"
                />

        <include
                layout="@layout/reg_usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/reg_usuario_include"
                android:layout_below="@id/reg_usuariocomunidad_include"
                />

        <Button
                android:id="@+id/reg_usuario_usuariocomunidad_fr_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_decription_widget"
                android:text="@string/button_registro_en_comunidad"
                android:layout_below="@id/reg_usuario_include"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_double_margin"
                android:layout_alignParentLeft="true"
                />
    </RelativeLayout>
</ScrollView>