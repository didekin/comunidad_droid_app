<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:orientation="vertical"
        >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/user_data_ac_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.didekindroid.usuario.activity.UserDataAc">

        <fragment
                android:id="@+id/reg_user_frg"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@id/reg_usercomu_frg"
                android:name="com.didekindroid.usuario.activity.RegUserFr"
                tools:layout="@layout/reg_user_fr"/>

        <Button
                android:id="@+id/user_data_modif_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_decription_widget"
                android:text="@string/user_data_modif_button_txt"
                android:layout_below="@id/reg_user_frg"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_double_margin"
                android:layout_alignParentStart="true"
                />


        <TextView
                android:id="@+id/user_data_ac_unreg_rot"
                android:text="@string/user_data_ac_unreg_rot_txt"
                android:textStyle="normal"
                android:textSize="@dimen/text_rotulo_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentStart="true"
                android:layout_below="@id/user_data_modif_button"/>

        <Button
                android:id="@+id/user_data_unreg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_decription_widget"
                android:text="@string/user_data_unreg_button_txt"
                android:layout_below="@id/user_data_ac_unreg_rot"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_double_margin"
                android:layout_alignParentStart="true"
                />

    </RelativeLayout>
</ScrollView>