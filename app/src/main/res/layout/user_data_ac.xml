<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:orientation="vertical"
            tools:context="com.didekindroid.usuario.activity.UserDataAc">

    <RelativeLayout android:id="@+id/user_data_ac_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <TextView
                android:id="@+id/user_data_ac_rotulo"
                android:text="@string/user_data_ac_rotulo"
                android:textStyle="bold"
                android:textSize="@dimen/text_rotulo_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentStart="true"/>

        <TextView
                android:id="@+id/user_data_ac_cambios_rot"
                android:text="@string/user_data_ac_cambios_text"
                android:textStyle="normal"
                android:textSize="@dimen/text_hint_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentStart="true"
                android:layout_below="@id/user_data_ac_rotulo"/>

        <include
                layout="@layout/user_data_include"
                android:id="@+id/user_data_ac_include"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/user_data_ac_cambios_rot"/>

        <TextView
                android:id="@+id/user_data_ac_password_rot"
                android:text="@string/user_data_ac_password_txt"
                android:textStyle="normal"
                android:textSize="@dimen/text_hint_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentStart="true"
                android:layout_below="@id/user_data_ac_include"/>

        <EditText
                android:id="@+id/user_data_ac_password_ediT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/text_hint_size"
                android:imeOptions="actionNext"
                android:maxEms="50"
                android:hint="@string/user_data_ac_password_hint"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentStart="true"
                android:layout_below="@id/user_data_ac_password_rot"/>

        <Button
                android:id="@+id/user_data_modif_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_decription_widget"
                android:text="@string/user_data_modif_button_txt"
                android:layout_below="@id/user_data_ac_password_ediT"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_double_margin"
                android:layout_alignParentStart="true"
                />

    </RelativeLayout>
</ScrollView>