<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/user_include_layout">

    <TextView
            android:id="@+id/usercomu_item_alias_txt"
            android:textStyle="bold"
            android:visibility="visible"
            android:textSize="@dimen/text_hint_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/usercomu_item_username_txt"
            android:textStyle="bold"
            android:visibility="visible"
            android:textSize="@dimen/text_hint_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/usercomu_item_alias_txt"
            android:layout_alignTop="@id/usercomu_item_alias_txt"
            android:layout_alignBottom="@id/usercomu_item_alias_txt"/>
    />

</RelativeLayout>