<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/user_include_layout"
              style="@style/baseLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/user_item_alias_txt"
        style="@style/textBase.textFieldLabel2"
        android:layout_weight="0"/>

    <TextView
        android:id="@+id/user_item_username_txt"
        style="@style/textBase.textFieldLabel2"
        android:layout_weight="1"
        android:gravity="start"
        android:layout_marginStart="@dimen/double_horizontal_margin"/>

</LinearLayout>