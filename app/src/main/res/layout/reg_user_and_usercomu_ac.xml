<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/baseLayout.scroll">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/reg_user_and_usercomu_ac_layout"
        style="@style/baseLayout"
        tools:context="com.didekindroid.usuario.activity.RegUserAndUserComuAc">

        <include layout="@layout/appbar_include" />

        <TextView
            android:id="@+id/rotulo_comunidad"
            style="@style/textBase.textPageLabel2"
            android:layout_marginTop="@dimen/app_bar_bottom_margin"
            android:text="@string/rotulo_comunidad" />

        <TextView
            android:id="@+id/descripcion_comunidad_text"
            style="@style/textBase.textFieldLabel1"
            android:layout_marginTop="0dp"
        />

        <fragment
            android:id="@+id/reg_usercomu_frg"
            android:name="com.didekindroid.usuario.activity.RegUserComuFr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/reg_usercomu_fr" />

        <fragment
            android:id="@+id/reg_user_frg"
            android:name="com.didekindroid.usuario.activity.RegUserFr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/reg_user_fr" />

        <Button
            android:id="@+id/reg_user_usercomu_button"
            style="@style/textBase.acButton1"
            android:layout_gravity="center_horizontal"
            android:text="@string/reg_usercomu_ac_button_rot" />

    </LinearLayout>
</ScrollView>