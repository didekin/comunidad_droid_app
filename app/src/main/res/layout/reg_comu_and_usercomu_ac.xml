<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/baseLayout.scroll">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/reg_comu_and_usercomu_layout"
                    style="@style/baseLayout"
                    tools:context="com.didekindroid.usuario.activity.RegComuAndUserComuAc">

        <fragment
                android:id="@+id/reg_comunidad_frg"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:name="com.didekindroid.usuario.activity.RegComuFr"
                tools:layout="@layout/reg_comu_fr"/>

        <fragment
                android:id="@+id/reg_usercomu_frg"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@id/reg_comunidad_frg"
                android:name="com.didekindroid.usuario.activity.RegUserComuFr"
                tools:layout="@layout/reg_usercomu_fr"/>

        <Button
                android:id="@+id/reg_comu_usuariocomunidad_button"
                style="@style/textBase.acButton1"
                android:text="@string/reg_usercomu_ac_button_rot"
                android:layout_below="@id/reg_usercomu_frg"
                />

    </RelativeLayout>
</ScrollView>
