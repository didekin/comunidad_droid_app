<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/comu_search_results_ac_two_pane_frg_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <fragment
            android:id="@+id/comu_list_frg"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_alignParentLeft="true"
            android:name="com.didekindroid.usuario.activity.ComuSearchResultsListFr"
            tools:layout="@layout/comu_list_item_view"/>

    <fragment
            android:id="@+id/usuario_comunidad_reg_frg"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_toRightOf="@id/comu_list_frg"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:name="com.didekindroid.usuario.activity.RegUserAndUserComuFr"
            tools:layout="@layout/reg_user_and_usercomu_fr"/>
</LinearLayout>