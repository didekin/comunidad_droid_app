<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/incid_comments_see_fr"
    style="@style/baseLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/incid_comments_see_fr_layout"
        style="@style/baseLayout.withPadding"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="@dimen/app_bar_bottom_margin">

        <ListView
            android:id="@id/android:list"
            style="@style/basicList"
            android:choiceMode="none"
            android:listSelector="@color/transparent">
        </ListView>

        <TextView
            android:id="@id/android:empty"
            style="@style/textBase.no_item_list_message"
            android:text="@string/incid_comments_see_no_comments"
            android:visibility="gone">
        </TextView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/incid_new_comment_fab"
        style="@style/floatingButton"
        app:fabSize="mini"
        app:rippleColor="@color/deep_orange_200"
        app:srcCompat="@drawable/ic_create_black_24dp"/>

</android.support.design.widget.CoordinatorLayout>
