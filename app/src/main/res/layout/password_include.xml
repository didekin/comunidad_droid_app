<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/baseLayout"
                android:id="@+id/password_include_layout">

    <EditText
            android:id="@+id/reg_usuario_password_ediT"
            style="@style/textBase.editField.password"
            android:layout_alignParentStart="true"
            tools:ignore="LabelFor"/>

    <EditText
            android:id="@+id/reg_usuario_password_confirm_ediT"
            style="@style/textBase.editField.password"
            android:hint="@string/usuario_password_confirm_hint"
            android:layout_alignParentStart="true"
            android:layout_below="@id/reg_usuario_password_ediT"/>

</RelativeLayout>