<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    style="@style/baseLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.didekindroid.incidencia.activity.IncidCommentRegAc">

    <include layout="@layout/appbar_include_design"/>

    <ScrollView style="@style/baseLayout.scroll">

        <LinearLayout
            android:id="@+id/incid_comment_reg_ac_layout"
            style="@style/baseLayout"
            android:layout_marginTop="@dimen/app_bar_bottom_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/incid_comment_reg_ac">

            <TextView
                android:id="@+id/incid_incidencias_rot"
                style="@style/textBase.ListLabelColor"
                android:text="@string/incid_comment_incidencia_rot"/>

            <TextView
                android:id="@+id/incid_reg_desc_txt"
                style="@style/textBase.editField.description"/>

            <EditText
                android:id="@+id/incid_comment_ed"
                style="@style/textBase.editField.description"
                android:hint="@string/incid_comment_ed_hint"
                tools:ignore="LabelFor"/>

            <Button
                android:id="@+id/incid_comment_reg_button"
                style="@style/textBase.acButton1"
                android:text="@string/incid_comment_ed_button_rot"/>

        </LinearLayout>

        <!-- <include layout="@layout/content_incid_comment_reg"/>-->

        <!--<android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@android:drawable/ic_dialog_email"/>
    -->
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
