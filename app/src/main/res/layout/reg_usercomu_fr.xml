<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/reg_usuariocomunidad_layout"
                android:visibility="visible">
    <TextView
            android:id="@+id/reg_usuariocomunidad_rot_vivienda"
            android:text="@string/reg_usuario_comunidad_rot_vivienda"
            android:textStyle="bold"
            android:textSize="@dimen/text_rotulo_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true"/>

    <EditText
            android:id="@+id/reg_usuariocomunidad_portal_editT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textSize="@dimen/text_hint_size"
            android:imeOptions="actionNext"
            android:maxEms="10"
            android:hint="@string/vivienda_portal_hint"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/reg_usuariocomunidad_rot_vivienda"/>

    <EditText
            android:id="@+id/reg_usuariocomunidad_escalera_editT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textSize="@dimen/text_hint_size"
            android:imeOptions="actionNext"
            android:maxEms="10"
            android:hint="@string/vivienda_escalera_hint"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/reg_usuariocomunidad_portal_editT"
            android:layout_alignTop="@id/reg_usuariocomunidad_portal_editT"
            android:layout_alignBottom="@id/reg_usuariocomunidad_portal_editT"/>

    <EditText
            android:id="@+id/reg_usuariocomunidad_planta_editT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textSize="@dimen/text_hint_size"
            android:imeOptions="actionNext"
            android:maxEms="10"
            android:hint="@string/vivienda_planta_hint"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/reg_usuariocomunidad_escalera_editT"
            android:layout_alignTop="@id/reg_usuariocomunidad_portal_editT"
            android:layout_alignBottom="@id/reg_usuariocomunidad_portal_editT"/>

    <EditText
            android:id="@+id/reg_usuariocomunidad_puerta_editT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textSize="@dimen/text_hint_size"
            android:imeOptions="actionNext"
            android:maxEms="10"
            android:hint="@string/vivienda_puerta_hint"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/reg_usuariocomunidad_planta_editT"
            android:layout_alignTop="@id/reg_usuariocomunidad_portal_editT"
            android:layout_alignBottom="@id/reg_usuariocomunidad_portal_editT"/>

    <TextView
            android:id="@+id/reg_usuariocomunidad_roles_checkbox_rotulo"
            android:text="@string/comunidad_role_checkbox_rotulo"
            android:textStyle="normal"
            android:textSize="@dimen/text_rotulo_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_usuariocomunidad_puerta_editT"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true"/>


    <CheckBox
            android:id="@+id/reg_usuariocomunidad_roles_checbox_presi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_presidente"
            android:textSize="@dimen/text_decription_widget"
            android:layout_below="@id/reg_usuariocomunidad_roles_checkbox_rotulo"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <CheckBox
            android:id="@+id/reg_usuariocomunidad_roles_checbox_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_admin"
            android:textSize="@dimen/text_decription_widget"
            android:layout_below="@id/reg_usuariocomunidad_roles_checbox_presi"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <CheckBox
            android:id="@+id/reg_usuariocomunidad_roles_checbox_propietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_propietario"
            android:textSize="@dimen/text_decription_widget"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/reg_usuariocomunidad_roles_checbox_presi"
            android:layout_alignTop="@id/reg_usuariocomunidad_roles_checbox_presi"
            android:layout_alignBottom="@id/reg_usuariocomunidad_roles_checbox_presi"/>

    <CheckBox
            android:id="@+id/reg_usuariocomunidad_roles_checbox_inquilino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_inquilino"
            android:textSize="@dimen/text_decription_widget"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/reg_usuariocomunidad_roles_checbox_admin"
            android:layout_alignTop="@id/reg_usuariocomunidad_roles_checbox_admin"
            android:layout_alignBottom="@id/reg_usuariocomunidad_roles_checbox_admin"/>

</RelativeLayout>