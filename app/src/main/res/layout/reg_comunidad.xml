    <Spinner
            android:id="@+id/tipo_via_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:inputType="textNoSuggestions"
            />

    <EditText
            android:id="@+id/comunidad_nombre_via_editT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:maxEms="80"
            android:textSize="@dimen/text_hint_size"
            android:hint="@string/nombre_via_hint"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:imeOptions="actionNext">

        <EditText
                android:id="@+id/comunidad_numero_editT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:maxEms="6"
                android:textSize="@dimen/text_hint_size"
                android:hint="@string/numero_en_via"
                />

        <EditText
                android:id="@+id/comunidad_sufijo_numero_editT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxEms="6"
                android:textSize="@dimen/text_hint_size"
                android:hint="@string/sufijo_numero_en_via_hint"
                />
    </LinearLayout>

    <Spinner
            android:id="@+id/autonoma_comunidad_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            />

    <Spinner
            android:id="@+id/provincia_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            />

    <Spinner
            android:id="@+id/municipio_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:dropDownWidth="200dp"
            android:drawSelectorOnTop="true"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            />
</LinearLayout>