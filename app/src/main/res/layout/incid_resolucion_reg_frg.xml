<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/incid_resolucion_reg_frg_layout"
    style="@style/baseLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.didekindroid.incidencia.activity.IncidResolucionRegAcFragment">

    <TextView
        android:id="@+id/incid_resolucion_rot"
        style="@style/textBase.textPageLabel2"
        android:text="@string/incid_resolucion_rot"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/incid_resolucion_desc_ed"
        style="@style/textBase.editField.description"
        android:hint="@string/incid_resolucion_hint"
        android:layout_below="@+id/incid_resolucion_rot"/>

    <Spinner
        android:id="@+id/incid_resolucion_fase_spinner"
        style="@style/spinnerBase"
        android:layout_below="@+id/incid_resolucion_desc_ed"/>

    <TextView
        android:id="@+id/incid_resolucion_presupuesto_rot"
        style="@style/textBase.textFieldLabel2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/incid_resolucion_fase_spinner"
        android:text="@string/incid_resolucion_presupuesto_rot"/>

    <EditText
        android:id="@+id/incid_resolucion_presupuesto_ed"
        style="@style/textBase.editField"
        android:inputType="number"
        android:maxEms="10"
        android:minEms="4"
        android:lines="1"
        android:scrollHorizontally="false"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/incid_resolucion_presupuesto_rot"
        android:layout_alignTop="@id/incid_resolucion_presupuesto_rot"
        android:layout_alignBottom="@id/incid_resolucion_presupuesto_rot"
        tools:ignore="LabelFor"/>

    <TextView
        android:id="@+id/incid_resolucion_coste_rot"
        style="@style/textBase.textFieldLabel2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/incid_resolucion_presupuesto_rot"
        android:text="@string/incid_resolucion_coste_rot"/>

    <EditText
        android:id="@+id/incid_resolucion_coste_ed"
        style="@style/textBase.editField"
        android:inputType="number"
        android:maxEms="10"
        android:minEms="4"
        android:lines="1"
        android:scrollHorizontally="false"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/incid_resolucion_coste_rot"
        android:layout_alignTop="@id/incid_resolucion_coste_rot"
        android:layout_alignBottom="@id/incid_resolucion_coste_rot"
        tools:ignore="LabelFor"/>

    <!--Listado de proveedores YA asociados a la comunidad.
        TODO: Puede darse la opción de búsqueda de proveedor con un enlace. -->
    <Spinner
        android:id="@+id/incid_resolucion_proveedor_spinner"
        style="@style/spinnerBase"
        android:layout_below="@+id/incid_resolucion_coste_rot"/>

</RelativeLayout>