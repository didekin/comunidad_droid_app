<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.didekindroid">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <instrumentation
            android:name="android.support.test.runner.AndroidJUnitRunner"
            android:targetPackage="com.didekindroid"/>
    <supports-screens
            android:largeScreens="true"
            android:normalScreens="true"
            android:smallScreens="true"
            android:xlargeScreens="true"/>

    <application
            android:name=".DidekindroidApp"
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo">

        <!-- ================ OFERTA =============== -->
        <!-- .......... Oferta ......... -->
        <activity
                android:name=".oferta.OfertaActivity"
                android:label="@string/ofertas_label">
        </activity>
        <activity
                android:name=".oferta.OfertaSettingsActivity"
                android:label="@string/ofertas_settings_label"
                android:parentActivityName=".oferta.OfertaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- **************************************************************** -->
        <!-- USUARIO -->
        <!-- **************************************************************** -->
        <!-- =========== Comunidad ========== -->
        <activity
                android:name=".usuario.comunidad.ComuSearchAc"
                android:label="@string/comu_search_ac_label"
                android:launchMode="singleTop"
                android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".usuario.comunidad.ComuSearchResultsAc"
                android:label="@string/comu_search_results_ac_label"
                android:parentActivityName=".usuario.comunidad.ComuSearchAc">
        </activity>
        <activity
                android:name=".usuario.comunidad.SeeComuAndUserComuAc"
                android:label="@string/see_comu_and_usercomu_ac_label"
                android:parentActivityName=".usuario.comunidad.ComuSearchResultsAc">
        </activity>
        <activity
                android:name=".usuario.comunidad.RegUserAndUserComuAc"
                android:label="@string/reg_user_and_usercomu_ac_label"
                android:parentActivityName=".usuario.comunidad.ComuSearchResultsAc">
        </activity>
        <activity
                android:name=".usuario.comunidad.RegUserComuAc"
                android:label="@string/regusuario_comu_ac_label"
                android:parentActivityName=".usuario.comunidad.ComuSearchAc"/>
        <activity
                android:name=".usuario.comunidad.RegComuAndUserAndUserComuAc"
                android:label="@string/reg_comunidad_ac_label"
                android:launchMode="singleTask"
                android:parentActivityName=".usuario.comunidad.ComuSearchAc">
        </activity>
        <activity
                android:name=".usuario.comunidad.RegComuAndUserComuAc"
                android:label="@string/reg_comunidad_ac_label"
                android:launchMode="singleTask"
                android:parentActivityName=".usuario.comunidad.ComuSearchAc">
        </activity>
        <activity
                android:name=".usuario.comunidad.ComusByUserListAc"
                android:label="@string/comunidades_usuario_acc_label"
                android:parentActivityName=".usuario.comunidad.ComuSearchAc">
        </activity>
        <!-- =========== Login ========== -->
        <activity
                android:name=".usuario.login.LoginActivity"
                android:label="@string/login_label">
        </activity>
        <activity
                android:name=".usuario.UserDataAc"
                android:label="@string/user_data_ac_label">
        </activity>
    </application>

</manifest>
