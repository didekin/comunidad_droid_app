<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.didekindroid"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Permissions for GCM services -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <permission
        android:name="com.didekindroid.permission.C2D_MESSAGE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="com.didekindroid.permission.C2D_MESSAGE"/>
    <!-- .......... -->

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <application
        android:name=".DidekindroidApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/themeOne">

        <!-- Components for GCM services -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.didekindroid.incidencia.gcm"/>
            </intent-filter>
        </receiver>
        <service
            android:name=".incidencia.gcm.AppGcmListenerServ"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>
        <service
            android:name=".incidencia.gcm.AppInstanceIdListenerServ"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <service
            android:name=".incidencia.gcm.GcmRegistrationIntentServ"
            android:exported="false">
        </service>
        <!-- ......... -->

        <!-- **************************************************************** -->
        <!-- INCIDENCIA -->
        <!-- **************************************************************** -->
        <!-- TODO: Cambiar el encadenamiento de activities. Empezar por listado. -->
        <activity
            android:name=".incidencia.activity.IncidRegAc"
            android:label="@string/incid_reg_ac_label"
            android:parentActivityName=".usuario.activity.UserComuDataAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.UserComuDataAc"/>
        </activity>
        <activity
            android:name=".incidencia.activity.IncidSeeByUserComuAc"
            android:label="@string/title_activity_incid_see_by_user_comu">
        </activity>
        <!-- **************************************************************** -->
        <!-- USUARIO -->
        <!-- **************************************************************** -->

        <activity
            android:name=".usuario.activity.ComuDataAc"
            android:label="@string/comu_data_ac_label"
            android:parentActivityName=".usuario.activity.UserComuDataAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.UserComuDataAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.ComuSearchAc"
            android:label="@string/comu_search_ac_label"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".usuario.activity.ComuSearchResultsAc"
            android:label="@string/comu_search_results_ac_label"
            android:parentActivityName=".usuario.activity.ComuSearchAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.ComuSearchAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.DeleteMeAc"
            android:label="@string/delete_me_ac_label"
            android:parentActivityName=".usuario.activity.UserDataAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.UserDataAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.LoginAc"
            android:label="@string/login_label"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".usuario.activity.PasswordChangeAc"
            android:label="@string/password_change_ac_label"
            android:parentActivityName=".usuario.activity.UserDataAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.UserDataAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.RegComuAndUserAndUserComuAc"
            android:label="@string/reg_comunidad_ac_label"
            android:launchMode="singleTask"
            android:parentActivityName=".usuario.activity.ComuSearchAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.ComuSearchAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.RegComuAndUserComuAc"
            android:label="@string/reg_comunidad_ac_label"
            android:launchMode="singleTask"
            android:parentActivityName=".usuario.activity.ComuSearchAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.ComuSearchAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.RegUserAndUserComuAc"
            android:label="@string/reg_user_and_usercomu_ac_label"
            android:parentActivityName=".usuario.activity.ComuSearchResultsAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.ComuSearchResultsAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.RegUserComuAc"
            android:label="@string/regusuario_comu_ac_label"
            android:launchMode="singleTask"
            android:parentActivityName=".usuario.activity.ComuSearchAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.ComuSearchAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.SeeUserComuByComuAc"
            android:label="@string/see_usercomu_by_comu_ac_label"
            android:parentActivityName=".usuario.activity.UserComuDataAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.UserComuDataAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.SeeUserComuByUserAc"
            android:label="@string/see_usercomu_by_user_ac_label"
            android:parentActivityName=".usuario.activity.ComuSearchResultsAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.ComuSearchResultsAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.UserComuDataAc"
            android:label="@string/usercomu_data_ac_label"
            android:parentActivityName=".usuario.activity.SeeUserComuByUserAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.SeeUserComuByUserAc"/>
        </activity>
        <activity
            android:name=".usuario.activity.UserDataAc"
            android:label="@string/user_data_ac_label"
            android:parentActivityName=".usuario.activity.SeeUserComuByUserAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.activity.SeeUserComuByUserAc"/>
        </activity>
    </application>

</manifest>
