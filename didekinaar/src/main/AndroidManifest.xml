<manifest package="com.didekinaar"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!--All of the permissions are non-dangerous permission. No check online.-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- Permissions for GCM services -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <!-- .......... -->
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <application>
        <!-- **************************************************************** -->
        <!-- USUARIO -->
        <!-- **************************************************************** -->
        <activity
            android:name=".comunidad.ComuDataAc"
            android:label="@string/comu_data_ac_label"
            android:parentActivityName=".usuariocomunidad.UserComuDataAc"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuariocomunidad.UserComuDataAc"/>
        </activity>
        <activity
            android:name=".comunidad.ComuSearchAc"
            android:label="@string/comu_search_ac_label"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".comunidad.ComuSearchResultsAc"
            android:label="@string/comu_search_results_ac_label"
            android:parentActivityName=".comunidad.ComuSearchAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".comunidad.ComuSearchAc"/>
        </activity>
        <activity
            android:name=".usuario.DeleteMeAc"
            android:label="@string/delete_me_ac_label"
            android:parentActivityName=".usuario.UserDataAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.UserDataAc"/>
        </activity>
        <activity
            android:name=".usuario.LoginAc"
            android:label="@string/login_label"
            android:launchMode="singleInstance"
            android:parentActivityName=".comunidad.ComuSearchAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".comunidad.ComuSearchAc"/>
        </activity>
        <activity
            android:name=".usuario.PasswordChangeAc"
            android:label="@string/password_change_ac_label"
            android:parentActivityName=".usuario.UserDataAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuario.UserDataAc"/>
        </activity>
        <activity
            android:name=".usuariocomunidad.RegComuAndUserAndUserComuAc"
            android:label="@string/reg_comunidad_ac_label"
            android:launchMode="singleTask"
            android:parentActivityName=".comunidad.ComuSearchAc"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".comunidad.ComuSearchResultsAc"/>
        </activity>
        <activity
            android:name=".usuariocomunidad.RegComuAndUserComuAc"
            android:label="@string/reg_comunidad_ac_label"
            android:launchMode="singleTask"
            android:parentActivityName=".comunidad.ComuSearchAc"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".comunidad.ComuSearchAc"/>
        </activity>
        <activity
            android:name=".usuariocomunidad.RegUserAndUserComuAc"
            android:label="@string/reg_user_and_usercomu_ac_label"
            android:parentActivityName=".comunidad.ComuSearchResultsAc"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".comunidad.ComuSearchResultsAc"/>
        </activity>
        <activity
            android:name=".usuariocomunidad.RegUserComuAc"
            android:label="@string/regusuario_comu_ac_label"
            android:launchMode="singleTask"
            android:parentActivityName=".comunidad.ComuSearchResultsAc"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".comunidad.ComuSearchResultsAc"/>
        </activity>
        <activity
            android:name=".usuariocomunidad.SeeUserComuByComuAc"
            android:label="@string/see_usercomu_by_comu_ac_label"
            android:parentActivityName=".usuariocomunidad.UserComuDataAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuariocomunidad.UserComuDataAc"/>
        </activity>
        <activity
            android:name=".usuariocomunidad.SeeUserComuByUserAc"
            android:label="@string/see_usercomu_by_user_ac_label"
            android:parentActivityName=".comunidad.ComuSearchResultsAc">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".comunidad.ComuSearchResultsAc"/>
        </activity>
        <activity
            android:name=".usuariocomunidad.UserComuDataAc"
            android:label="@string/usercomu_data_ac_label"
            android:parentActivityName=".usuariocomunidad.SeeUserComuByUserAc"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuariocomunidad.SeeUserComuByUserAc"/>
        </activity>
        <activity
            android:name=".usuario.UserDataAc"
            android:label="@string/user_data_ac_label"
            android:parentActivityName=".usuariocomunidad.SeeUserComuByUserAc"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".usuariocomunidad.SeeUserComuByUserAc"/>
        </activity>
        <!-- .......... GCM services ......... -->
        <service
            android:name="com.didekinaar.usuario.AarFBInstanceIdService" android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name="com.didekinaar.usuario.AarFBRegIntentService"
            android:exported="false">
        </service>
    </application>
</manifest>